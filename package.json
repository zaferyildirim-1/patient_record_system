{
  "name": "clinic-app",
  "version": "1.0.0",
  "description": "Basit hasta kayıt uygulaması",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "export:csv": "node scripts/export-csv.js manual",
    "dist": "electron-builder"
  },
  "keywords": [
    "clinic",
    "patient-records",
    "express",
    "sqlite"
  ],
  "author": "Clinic",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "electron-is-dev": "^3.0.1",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "mammoth": "^1.11.0",
    "openai": "^6.17.0",
    "session-file-store": "^1.5.0",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/cli": "^2.10.0",
    "concurrently": "^8.2.2",
    "electron": "^40.6.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.0.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.huseyin-sert.clinic",
    "productName": "ClinicApp",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "views/**/*",
      "public/**/*",
      "node_modules/**/*",
      ".env*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": true,
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "zip"
      ],
      "hardenedRuntime": false
    },
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "seed/clinic.db",
        "to": "seed/clinic.db"
      }
    ]
  },
  "productName": "ClinicApp"
}